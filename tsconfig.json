{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "src": ["./src/*"],
      "components": ["./src/components/*"],
      "pages": ["./src/pages/*"]
    }
  }
}
